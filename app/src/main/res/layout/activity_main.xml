<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryDarkColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/primaryDarkColor">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/textTitle"
                    android:text="@string/app_name"
                    android:textSize="@dimen/textTitle"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="200dp"
            android:background="@color/primaryDarkColor">
            <TextView
                android:id="@+id/dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                android:textSize="80dp"
                android:layout_marginLeft="@dimen/textTitle"
                android:fontFamily="sans-serif"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Agosto"
                android:textSize="50dp"
                android:layout_alignBaseline="@id/dia"
                android:layout_toRightOf="@id/dia"
                android:fontFamily="sans-serif"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:background="#f2f2f2">


            <LinearLayout
                style="@style/section_buttons_main">

                <ImageView
                    style="@style/ic_main_style"
                    android:background="@drawable/baseline_wb_sunny_black_18dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="@string/mostrar_dia"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/section_buttons_main"
                android:onClick="backlog">

                <ImageView
                    android:layout_gravity="center"
                    style="@style/ic_main_style"
                    android:background="@drawable/baseline_list_black_18dp"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/backlog"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/section_buttons_main">

                <ImageView
                    style="@style/ic_main_style"
                    android:background="@drawable/baseline_wb_sunny_black_18dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mostrar_dia"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="300dp"
            android:background="#f2f2f2">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>